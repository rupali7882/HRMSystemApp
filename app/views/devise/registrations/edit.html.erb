<section>
  <div class="container">
   <div class="center"> 
      <h2>Edit <%= resource_name.to_s.humanize %></h2>
   </div>
      <div class="row">
        <div class="col-md-3"></div>
        <div class="col-md-6">
          <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
            <%= devise_error_messages! %>
             <div class="profile-png">
             <%= image_tag(set_profile_pic(resource),:id=>"preview-photo")%> </div>
              <label for="user_pic" class="custom-file-upload">
                  <i class="fa fa-cloud-upload"></i> 
              </label>
 
            <div class="form-group">
              <%= f.file_field :pic, :class=>"form-control" %>
            </div>
            <div class="form-group">
              <%= f.text_field :fname, autofocus: true, :class=>"form-control", :placeholder=>"First Name" %>
            </div>
            <div class="form-group">
              <%= f.text_field :lname, autofocus: true, :class=>"form-control", :placeholder=>"Last Name" %>
            </div>
            <div class="form-group">
              <%= f.text_field :age, autofocus: true, :class=>"form-control", :placeholder=>"Age" %>
            </div>

            <div class="form-group">
              <%= f.text_field :sec_email, autofocus: true, :class=>"form-control", :placeholder=>"secondary email" %>
            </div>

            <div class="form-group">
              <%= f.text_field :mobile, autofocus: true, :class=>"form-control", :placeholder=>"Mobile" %>
            </div>

            <div class="form-group">
              <%= f.text_area :content, autofocus: true, :class=>"form-control", :placeholder=>"Short Description" %> 
            </div>

            <div class="text-center">
              <%= link_to "Back", :back, :class=>"btn btn-primary" %>  
              <%= f.submit "Update" ,:class=>"btn btn-primary"  %>
            </div>
          <% end %>

        </div>
        <div class="col-md-3"></div>
        <!--  <div class="col-md-3"><%#= image_tag("profile.png")%></div> -->
  </div>
</section>

<script type="text/javascript">


$('#user_pic').change(function(e){
    var file = this.files[0];
    var reader = new FileReader();
    reader.onload = function(){
        document.getElementById('preview-photo').src = this.result;
        };
    reader.readAsDataURL(file);
    });

</script>
