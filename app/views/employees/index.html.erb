
<section class="center" ng-app="validationApp" ng-controller="mainController">
<%= link_to 'New Employee', new_employee_path , :style=>"float:right" ,:class=>"btn btn-primary "%>

<p id="notice"><%= notice %></p>

<h1>Employees</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Join date</th>
      <th>Dob</th>
      <th>Gender</th>
      <th>Phone</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @employees.each do |employee| %>
      <tr>
        <td><%= employee.fullname %></td>
        <td><%= employee.join_date %></td>
        <td><%= employee.dob %></td>
        <td><%= employee.gender %></td>
        <td><%= employee.phone %></td>
        <td><%= link_to 'Show', employee %></td>
        <td><%= link_to 'Edit', edit_employee_path(employee) %></td>
        <td><%= link_to 'Destroy', employee, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


</section>



